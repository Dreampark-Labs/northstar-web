# Production Environment Variables for NorthStar Web
# Copy this to .env.local for production deployment

# =============================================================================
# AUTHENTICATION SERVICE CONFIGURATION
# =============================================================================

# Production Auth Service URL (replace with your actual production domain)
NEXT_PUBLIC_AUTH_SERVICE_URL=https://auth.dreamparklabs.com

# Auth Service Domain
NEXT_PUBLIC_AUTH_DOMAIN=auth.dreamparklabs.com

# Main Application Domain
NEXT_PUBLIC_MAIN_DOMAIN=dreamparklabs.com

# NorthStar App Domain
NEXT_PUBLIC_APP_DOMAIN=ns.dplapps.com

# Landing Page URL
NEXT_PUBLIC_LANDING_URL=https://dreamparklabs.com/northstar

# App URL
NEXT_PUBLIC_APP_URL=https://ns.dplapps.com

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================

# Production Clerk Keys (replace with your production keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_KEY_HERE
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_SECRET_HERE
CLERK_JWT_ISSUER_DOMAIN=https://your-production-domain.clerk.accounts.dev

# =============================================================================
# CONVEX BACKEND
# =============================================================================

# Production Convex URL (replace with your production Convex deployment)
NEXT_PUBLIC_CONVEX_URL=https://your-production-deployment.convex.cloud
CONVEX_DEPLOY_KEY=prod:your-deployment-key

# =============================================================================
# POSTHOG ANALYTICS
# =============================================================================

# Production PostHog Key (replace with your production key)
NEXT_PUBLIC_POSTHOG_KEY=phc_YOUR_PRODUCTION_POSTHOG_KEY
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# =============================================================================
# SANITY CMS
# =============================================================================

# Production Sanity Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-production-project-id
NEXT_PUBLIC_SANITY_DATASET=production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production

# App Configuration
NEXT_PUBLIC_APP_NAME=NorthStar
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Academic Productivity Application

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================

# Enable security features
NEXT_PUBLIC_SECURE_COOKIES=true
NEXT_PUBLIC_HTTPS_ONLY=true

# Performance settings
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build settings
NEXT_TELEMETRY_DISABLED=1
SKIP_ENV_VALIDATION=false

# =============================================================================
# WEBHOOK & API CONFIGURATION
# =============================================================================

# Webhook secrets for production
WEBHOOK_SECRET=your-production-webhook-secret

# API rate limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging level
LOG_LEVEL=info

# Error reporting
SENTRY_DSN=your-sentry-dsn-if-using

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual production credentials
# 2. Ensure all domains are properly configured in your DNS
# 3. Update Clerk webhook endpoints to use production URLs
# 4. Configure SSL certificates for all domains
# 5. Set up monitoring and error reporting
# 6. Test all integrations in staging before production deployment
